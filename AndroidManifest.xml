<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.free.csdn"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name="com.free.csdn.app.MainApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.free.csdn.activity.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.free.csdn.activity.BlogListActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.free.csdn.activity.BlogDetailActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.free.csdn.activity.BlogCommentActivity"
            android:screenOrientation="portrait" >
        </activity>
            <activity
            android:name="com.free.csdn.activity.ImageActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>